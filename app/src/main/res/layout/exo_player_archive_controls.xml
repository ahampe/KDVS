<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/exo_back30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            style="@style/ExoMediaButton.Play"
            android:src="@drawable/ic_replay_30_white_24dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_play_pause_archive"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/exo_play_pause_archive"
            app:layout_constraintTop_toTopOf="@id/exo_play_pause_archive" />

        <ImageButton
            android:id="@+id/exo_play_pause_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            style="@style/ExoMediaButton.Play"
            android:src="@drawable/ic_play_circle_outline_white_48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exo_forward30"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/exo_back30" />

        <ImageView
            android:id="@+id/exo_forward30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            style="@style/ExoMediaButton.Play"
            android:src="@drawable/ic_forward_30_white_24dp"
            app:layout_constraintTop_toTopOf="@id/exo_stop"
            app:layout_constraintBottom_toBottomOf="@id/exo_back30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/exo_play_pause_archive" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
