<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".home.HomeFragment">

    <data>

        <variable
            name="currentShow"
            type="fho.kdvs.global.database.ShowEntity" />

        <variable
            name="nextShow"
            type="fho.kdvs.global.database.ShowEntity" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="vm"
            type="fho.kdvs.global.SharedViewModel" />

        <import type="org.threeten.bp.OffsetDateTime" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/go_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.changeToKdvsOgg()}"
            android:text="Go Live"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nextShowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginHorizontal="@dimen/home_next_show_horizontal_margin"
            android:text='@string/up_next'
            android:textColor="@color/colorPrimary"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            style="@style/TextAppearance.MaterialComponents.Overline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/go_live"
            tools:text="UP NEXT:" />

        <TextView
            android:id="@+id/nextShowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text='@{String.format("%s", nextShow.name ?? "")}'
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextShowTitle"
            tools:text="Next Show Name" />

        <ImageView
            android:id="@+id/showImage"
            glideHref="@{currentShow.defaultImageHref}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginHorizontal="@dimen/home_image_horizontal_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nextShowName"
            tools:src="@drawable/show_placeholder" />

        <LinearLayout
            android:id="@+id/showDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/showImage">

            <TextView
                android:id="@+id/showName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/home_image_horizontal_margin"
                android:gravity="center_horizontal"
                android:text='@{currentShow.name ?? ""}'
                android:textColor="@android:color/white"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Testing Show Name" />

            <TextView
                android:id="@+id/showTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/showName"
                app:timeEnd="@{currentShow.timeEnd ?? OffsetDateTime.now()}"
                app:timeStart="@{currentShow.timeStart ?? OffsetDateTime.now()}"
                tools:text="00:00 AM - 02:00 PM" />
        </LinearLayout>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            app:hide_on_touch="false"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/showDesc"
            app:use_artwork="true">

            <!--TODO next show-->

        </com.google.android.exoplayer2.ui.PlayerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>