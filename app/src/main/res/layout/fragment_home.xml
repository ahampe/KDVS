<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.HomeFragment">

    <data>

        <variable
            name="nextShow"
            type="fho.kdvs.global.database.ShowEntity" />

        <variable
            name="viewModel"
            type="fho.kdvs.viewmodel.KdvsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.changeToWmnf()}"
                android:text="WMNF"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/playButton"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/button"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.changeToWvfs()}"
                android:text="WVFS"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/button2"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.changeToWfmu()}"
                android:text="WFMU"
                app:layout_constraintLeft_toRightOf="@id/playButton"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <include android:id="@+id/nextShow" layout="@layout/cell_show_next"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.106"
                 android:layout_height="29dp" android:layout_width="346dp"
                 android:layout_marginTop="8dp"/>

        <include android:id="@+id/currentShow" layout="@layout/cell_show_current"
                 android:layout_height="355dp" android:layout_width="340dp"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"/>

        <ToggleButton
                android:id="@+id/playButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/play_selector"
                android:checked="@{viewModel.playingState}"
                android:enabled="@{viewModel.preparedState}"
                android:onClick="@{() -> viewModel.togglePlay()}"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.953"/>


        <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/exoPlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hide_on_touch="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:use_artwork="false">

        </com.google.android.exoplayer2.ui.PlayerView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>