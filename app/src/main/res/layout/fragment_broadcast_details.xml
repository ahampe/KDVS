<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="fho.kdvs.broadcast.BroadcastDetailsFragment">

    <data>

        <variable
            name="vm"
            type="fho.kdvs.broadcast.BroadcastDetailsViewModel" />

        <variable
            name="dateFormatter"
            type="org.threeten.bp.format.DateTimeFormatter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.broadcast.date != null ? dateFormatter.format(vm.broadcast.date) : ``}" />
    </LinearLayout>
</layout>
