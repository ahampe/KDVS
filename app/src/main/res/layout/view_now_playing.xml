<?xml version="1.0" encoding="utf-8"?>
<fho.kdvs.nowplaying.NowPlayingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nowPlayingView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/preview_pane"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_preview_height"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/now_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:gravity="center_horizontal"
            android:text="@string/now_playing"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/previewShowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:gravity="center_horizontal"
            android:text="Replace this already"
            android:textSize="16sp"
            tools:text="The Best Indie Folk Show" />
    </LinearLayout>

    <ImageView
        android:id="@+id/playing_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/show_placeholder"
        tools:ignore="ContentDescription" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height" />
</fho.kdvs.nowplaying.NowPlayingView>